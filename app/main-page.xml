<Page loaded="pageLoaded">
	<ActionBar id="actionBar" title="Join game" class="action-bar"></ActionBar>

	<StackLayout id="slackLayout" orientation="vertical">
		<Image src="https://i.imgur.com/V42zBSh.png" width="auto"/>
		
		<Label />

		<Label text="Username:" />
		<TextField id="username" />

		<Label text="Game name:" />
		<TextField id="gamename" />

		<Label text="Password:" />
		<TextField id="password" />

		<Label />

		<Button text="Join" class="btn btn-primary" tap="join" width="300" />
	</StackLayout>
</Page>