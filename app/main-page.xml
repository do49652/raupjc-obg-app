<Page loaded="pageLoaded">
	<ActionBar id="actionBar" title="Join game" class="action-bar"></ActionBar>

	<AbsoluteLayout id="absoluteLayout">
		<StackLayout orientation="vertical">
			<StackLayout id="topStackLayout" orientation="horizontal"></StackLayout>

			<StackLayout id="slackLayout" orientation="vertical">
				<Image src="https://i.imgur.com/V42zBSh.png" width="auto"/>
				
				<Label />

				<Label text="Username:" />
				<TextField id="username" />

				<Label text="Game name:" />
				<TextField id="gamename" />

				<Label text="Password:" />
				<TextField id="password" />

				<Label />

				<Button text="Join" class="btn btn-primary" tap="join" width="300" />
			</StackLayout>
		</StackLayout>

		<AbsoluteLayout id="leftContainer">
			<StackLayout id="leftStackLayout" orientation="vertical">
			</StackLayout>
		</AbsoluteLayout>

		<AbsoluteLayout id="rightContainer">
			<StackLayout id="rightStackLayout" orientation="vertical">
				<Button id="closeButton"></Button>
				<ScrollView>
					<StackLayout id="chatContainer"></StackLayout>
				</ScrollView>
				<TextField id="chatInputField" returnPress="sendChat" />
				<ScrollView>
					<StackLayout id="logContainer"></StackLayout>
				</ScrollView>
			</StackLayout>
		</AbsoluteLayout>

		<AbsoluteLayout id="modalContainer">
			<StackLayout id="modalLayout" orientation="vertical">
			</StackLayout>
		</AbsoluteLayout>

		<AbsoluteLayout>
			<StackLayout id="playersContainer">
				<Button id="togglePlayers"></Button>
				<ScrollView>
					<StackLayout id="playersLayout" orientation="vertical">
					</StackLayout>
				</ScrollView>
			</StackLayout>
		</AbsoluteLayout>
	</AbsoluteLayout>
</Page>